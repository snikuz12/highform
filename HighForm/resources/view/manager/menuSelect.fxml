<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.manager.controller.MenuSelectController">
   <children>
      <!-- Header -->
      <HBox alignment="CENTER_LEFT" prefHeight="60.0" style="-fx-background-color: #2E3A87;" VBox.vgrow="NEVER">
         <padding>
            <Insets left="20.0" right="20.0" />
         </padding>
         <children>
            <Label prefHeight="21.0" prefWidth="191.0" text="Manager's Menu" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <Region prefHeight="60.0" prefWidth="349.0" HBox.hgrow="ALWAYS" />
            <!-- Settings Button -->
            <Button fx:id="settingsButton" mnemonicParsing="false" onAction="#handleSettings" prefHeight="30.0" prefWidth="30.0" style="-fx-background-color: transparent; -fx-border-color: white; -fx-border-width: 1; -fx-text-fill: white;" text="x" />
         </children>
      </HBox>
   
      <!-- Main Content Area -->
      <HBox alignment="CENTER" prefHeight="400.0" style="-fx-background-color: #E5E5E5;" VBox.vgrow="ALWAYS">
         <padding>
            <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
         </padding>
      <children>
            
            <!-- Menu Items Container -->
            <HBox alignment="CENTER" spacing="40.0" HBox.hgrow="ALWAYS">
               <children>
                  
                  <!-- First Column -->
                  <VBox alignment="CENTER" spacing="30.0">
                     <children>
                        <!-- 결제승인 Button -->
                        <Button fx:id="paymentApprovalButton" onAction="#handlePaymentApproval" prefHeight="251.0" prefWidth="150.0" style="-fx-background-color: #D0D0D0; -fx-border-color: #999999; -fx-border-width: 1;">
                           <graphic>
                              <VBox alignment="CENTER" spacing="10.0">
                                 <children>
                                    <Region prefHeight="80.0" prefWidth="80.0" style="-fx-background-color: transparent;" />
                                    <Label text="결재승인">
                                       <font>
                                          <Font name="Malgun Gothic" size="14.0" />
                                       </font>
                                    </Label>
                                 </children>
                              </VBox>
                           </graphic>
                        </Button>
                     </children>
                  </VBox>
                  
                  <!-- Second Column -->
                  <VBox alignment="CENTER" spacing="30.0">
                     <children>
                        <!-- 출결리스트 Button -->
                        <Button fx:id="attendanceListButton" onAction="#handleAttendanceList" prefHeight="247.0" prefWidth="150.0" style="-fx-background-color: #D0D0D0; -fx-border-color: #999999; -fx-border-width: 1;">
                           <graphic>
                              <VBox alignment="CENTER" prefHeight="227.0" prefWidth="124.0" spacing="10.0">
                                 <children>
                                    <Region prefHeight="80.0" prefWidth="80.0" style="-fx-background-color: transparent;" />
                                    <Label text="출결리스트">
                                       <font>
                                          <Font name="Malgun Gothic" size="14.0" />
                                       </font>
                                    </Label>
                                 </children>
                              </VBox>
                           </graphic>
                        </Button>
                     </children>
                  </VBox>
                  
                  <!-- Third Column -->
                  <VBox alignment="CENTER" spacing="30.0">
                     <children>
                        <!-- 회원관리 Button -->
                        <Button fx:id="memberManagementButton" onAction="#handleMemberManagement" prefHeight="106.0" prefWidth="150.0" style="-fx-background-color: #D0D0D0; -fx-border-color: #999999; -fx-border-width: 1;">
                           <graphic>
                              <VBox alignment="CENTER" spacing="10.0">
                                 <children>
                                    <Region prefHeight="80.0" prefWidth="80.0" style="-fx-background-color: transparent;" />
                                    <Label text="회원관리">
                                       <font>
                                          <Font name="Malgun Gothic" size="14.0" />
                                       </font>
                                    </Label>
                                 </children>
                              </VBox>
                           </graphic>
                        </Button>
                        
                        <!-- 강의관리 Button -->
                        <Button fx:id="courseManagementButton" onAction="#handleCourseManagement" prefHeight="107.0" prefWidth="150.0" style="-fx-background-color: #D0D0D0; -fx-border-color: #999999; -fx-border-width: 1;">
                           <graphic>
                              <VBox alignment="CENTER" spacing="10.0">
                                 <children>
                                    <Region prefHeight="80.0" prefWidth="80.0" style="-fx-background-color: transparent;" />
                                    <Label text="강의관리">
                                       <font>
                                          <Font name="Malgun Gothic" size="14.0" />
                                       </font>
                                    </Label>
                                 </children>
                              </VBox>
                           </graphic>
                        </Button>
                     </children>
                  </VBox>
               </children>
            </HBox>
      </children>
      </HBox>
   </children>
</VBox>
