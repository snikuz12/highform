<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/8"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="com.manager.controller.CourseManagementController">
	<top>
		<HBox alignment="CENTER_LEFT" prefHeight="40.0"
			style="-fx-background-color: #4472C4;">
			<children>
				<Label prefHeight="25.0" text="🎓 Course Management"
					textFill="WHITE">
					<font>
						<Font name="System Bold" size="14.0" />
					</font>
					<HBox.margin>
						<Insets left="10.0" />
					</HBox.margin>
				</Label>
				<Region prefHeight="40.0" prefWidth="600.0" />
				<Button fx:id="backButton" onAction="#handleBackMenu" mnemonicParsing="false" prefHeight="30.0" prefWidth="30.0" text="🏠" />
			</children>
		</HBox>
	</top>
	<center>
		<VBox prefHeight="600.0" prefWidth="800.0" spacing="20.0">
			<children>
				<!-- 강의 목록 섹션 -->
				<VBox spacing="10.0">
					<children>
						<HBox alignment="CENTER_LEFT" spacing="10.0">
							<children>
								<Label text="강의 목록">
									<font>
										<Font name="System Bold" size="14.0" />
									</font>
								</Label>
								<Region HBox.hgrow="ALWAYS" />
								<Button fx:id="addBtn" onAction="#handleAddCourse" text="신규" />
							</children>
						</HBox>
						<TableView fx:id="courseTable" prefHeight="200.0">
							<columns>
								<TableColumn fx:id="courseIdColumn" prefWidth="50.0"
									text="No." />
								<TableColumn fx:id="courseNameColumn"
									prefWidth="200.0" text="강의명" />
								<TableColumn fx:id="startDateColumn"
									prefWidth="120.0" text="시작일" />
								<TableColumn fx:id="endDateColumn" prefWidth="120.0"
									text="종료일" />
								<TableColumn fx:id="instructorColumn"
									prefWidth="100.0" text="강사" />
								<TableColumn fx:id="managerColumn" prefWidth="80.0"
									text="담당자" />
								<TableColumn fx:id="noteColumn" prefWidth="150.0"
									text="비고" />
							</columns>
							<columnResizePolicy>
								<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
							</columnResizePolicy>
						</TableView>
					</children>
				</VBox>

				<!-- 강의 상세 섹션 -->
				<VBox spacing="10.0">
					<children>
						<Label text="강의 상세">
							<font>
								<Font name="System Bold" size="14.0" />
							</font>
						</Label>
						<GridPane hgap="10.0" vgap="10.0">
							<columnConstraints>
								<ColumnConstraints hgrow="NEVER"
									minWidth="80.0" prefWidth="80.0" />
								<ColumnConstraints hgrow="ALWAYS"
									maxWidth="408.0" minWidth="316.0" prefWidth="372.0" />
								<ColumnConstraints hgrow="NEVER"
									maxWidth="263.0" minWidth="80.0" prefWidth="125.0" />
								<ColumnConstraints hgrow="ALWAYS"
									maxWidth="190.0" minWidth="15.0" prefWidth="137.0" />
							</columnConstraints>
							<rowConstraints>
								<RowConstraints minHeight="30.0"
									prefHeight="30.0" vgrow="SOMETIMES" />
								<RowConstraints maxHeight="30.0" minHeight="30.0"
									prefHeight="30.0" vgrow="SOMETIMES" />
								<RowConstraints maxHeight="30.0" minHeight="30.0"
									prefHeight="30.0" vgrow="SOMETIMES" />
								<RowConstraints minHeight="80.0"
									prefHeight="80.0" vgrow="SOMETIMES" />
							</rowConstraints>
							<children>
								<Label
									style="-fx-background-color: #E7E6E6; -fx-padding: 5;"
									text="강의명" GridPane.columnIndex="0" GridPane.rowIndex="0" />
								<TextField fx:id="courseNameField" text="시스원 7기"
									GridPane.columnIndex="1" GridPane.rowIndex="0" />

								<Label
									style="-fx-background-color: #E7E6E6; -fx-padding: 5;"
									text="시작일" GridPane.columnIndex="2" GridPane.rowIndex="0" />
								<Label
									style="-fx-background-color: #E7E6E6; -fx-padding: 5;"
									text="종료일" GridPane.columnIndex="3" GridPane.rowIndex="0" />

								<Label
									style="-fx-background-color: #E7E6E6; -fx-padding: 5;"
									text="강사" GridPane.columnIndex="0" GridPane.rowIndex="1" />
								<TextField fx:id="instructorField" text="윤권, 조용군, 이세현"
									GridPane.columnIndex="1" GridPane.rowIndex="1" />

								<Label
									style="-fx-background-color: #E7E6E6; -fx-padding: 5;"
									text="담당자" GridPane.columnIndex="0" GridPane.rowIndex="2" />
								<TextField fx:id="managerField" minWidth="-Infinity"
									prefHeight="33.0" prefWidth="673.0" text="유지수, 손유미"
									GridPane.columnIndex="1" GridPane.rowIndex="2" />

								<Label
									style="-fx-background-color: #E7E6E6; -fx-padding: 5;"
									text="비고" GridPane.columnIndex="0" GridPane.rowIndex="3" />
								<TextArea fx:id="notesArea" prefRowCount="3"
									text="협회 사정으로 28/07/02 개강일 연기" wrapText="true"
									GridPane.columnIndex="1" GridPane.columnSpan="3"
									GridPane.rowIndex="3" />
								<TextField fx:id="startDateField" text="2028.07.02"
									GridPane.columnIndex="2" GridPane.rowIndex="1" />
								<TextField fx:id="endDateField" text="2028.12.25"
									GridPane.columnIndex="3" GridPane.rowIndex="1" />
							</children>
						</GridPane>
					</children>
				</VBox>
			</children>
			<padding>
				<Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
			</padding>
		</VBox>
	</center>
	<bottom>
		<HBox alignment="CENTER" spacing="10.0">
			<children>
				<Button fx:id="deleteBtn" onAction="#handleDeleteCourse" text="삭제" />
				<Button fx:id="editBtn" onAction="#handleEditCourse" text="수정" />
			</children>
			<padding>
				<Insets bottom="10.0" top="10.0" />
			</padding>
		</HBox>
	</bottom>
</BorderPane>
