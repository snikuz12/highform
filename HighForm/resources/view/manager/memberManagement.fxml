<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.manager.controller.MemberManagementController">
   <top>
      <HBox alignment="CENTER_LEFT" prefHeight="40.0" style="-fx-background-color: #4472C4;">
         <children>
            <Label prefHeight="25.0" prefWidth="213.0" text="🎓 Member Management" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Label>
            <Region prefHeight="40.0" prefWidth="600.0" />
            <Button fx:id="backButton" onAction="#handleBackMenu" mnemonicParsing="false" prefHeight="30.0" prefWidth="30.0" text="🏠" />
         </children>
      </HBox>
   </top>
   <center>
      <VBox prefHeight="600.0" prefWidth="800.0" spacing="20.0">
         <children>
            <!-- 회원 목록 섹션 -->
            <VBox spacing="10.0">
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <Label text="회원 목록">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Label>
                        <Region HBox.hgrow="ALWAYS" />
                        <Button fx:id="newMemberBtn" onAction="#handleAddCourse" text="신규" />
                     </children>
                  </HBox>
                  <TableView fx:id="memberTable" prefHeight="250.0">
                     <columns>
                        <TableColumn fx:id="idColumn" prefWidth="60.0" text="No." />
                        <TableColumn fx:id="loginIdColumn" prefWidth="80.0" text="ID" />
                        <TableColumn fx:id="nameColumn" prefWidth="100.0" text="이름" />
                        <TableColumn fx:id="emailColumn" prefWidth="180.0" text="e-mail" />
                        <TableColumn fx:id="phoneColumn" prefWidth="120.0" text="연락처" />
                        <TableColumn fx:id="affiliationColumn" prefWidth="120.0" text="소속" />
                        <TableColumn fx:id="positionColumn" prefWidth="80.0" text="직급" />
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </children>
            </VBox>
            
            <!-- 회원 상세 섹션 -->
            <VBox spacing="10.0">
               <children>
                  <Label text="회원 상세">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
                  <GridPane hgap="10.0" vgap="10.0">
                     <columnConstraints>
                        <ColumnConstraints hgrow="NEVER" maxWidth="88.0" minWidth="60.0" prefWidth="75.0" />
                        <ColumnConstraints hgrow="ALWAYS" maxWidth="285.0" minWidth="120.0" prefWidth="186.0" />
                        <ColumnConstraints hgrow="NEVER" maxWidth="205.0" minWidth="60.0" prefWidth="96.0" />
                        <ColumnConstraints hgrow="ALWAYS" maxWidth="252.0" minWidth="120.0" prefWidth="190.0" />
                        <ColumnConstraints hgrow="NEVER" maxWidth="122.0" minWidth="60.0" prefWidth="108.0" />
                        <ColumnConstraints hgrow="ALWAYS" maxWidth="150.0" minWidth="120.0" prefWidth="150.0" />
                     </columnConstraints>
                     <rowConstraints>
                        <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="80.0" prefHeight="80.0" vgrow="SOMETIMES" />
                     </rowConstraints>
                     <children>
                        <!-- 첫 번째 행: ID, 이름, 직급 -->
                        <Label style="-fx-background-color: #E7E6E6; -fx-padding: 5;" text="ID" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <TextField fx:id="idField" text="ks370" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                        
                        <Label style="-fx-background-color: #E7E6E6; -fx-padding: 5;" text="이름" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                        <TextField fx:id="nameField" prefHeight="33.0" prefWidth="214.0" text="김영한" GridPane.columnIndex="3" GridPane.rowIndex="0" />
                        
                        <Label style="-fx-background-color: #E7E6E6; -fx-padding: 5;" text="직급" GridPane.columnIndex="4" GridPane.rowIndex="0" />
                        <TextField fx:id="positionField" text="매니저" GridPane.columnIndex="5" GridPane.rowIndex="0" />
                        
                        <!-- 두 번째 행: 연락처, e-mail -->
                        <Label style="-fx-background-color: #E7E6E6; -fx-padding: 5;" text="연락처" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <TextField fx:id="phoneField" text="010-1234-5678" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        
                        <Label prefHeight="31.0" prefWidth="154.0" style="-fx-background-color: #E7E6E6; -fx-padding: 5;" text="e-mail" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                        <TextField fx:id="emailField" text="younghankim@gmail.com" GridPane.columnIndex="3" GridPane.columnSpan="3" GridPane.rowIndex="1" />
                        
                        <!-- 세 번째 행: 소속 -->
                        <Label style="-fx-background-color: #E7E6E6; -fx-padding: 5;" text="소속" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <TextField fx:id="affiliationField" text="KOSA 혜화" GridPane.columnIndex="1" GridPane.columnSpan="5" GridPane.rowIndex="2" />
                        
                        <!-- 네 번째 행: 비고 -->
                        <Label style="-fx-background-color: #E7E6E6; -fx-padding: 5;" text="비고" GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.valignment="TOP">
                           <GridPane.margin>
                              <Insets top="5.0" />
                           </GridPane.margin>
                        </Label>
                        <TextArea fx:id="notesArea" prefRowCount="3" wrapText="true" GridPane.columnIndex="1" GridPane.columnSpan="5" GridPane.rowIndex="3" />
                     </children>
                  </GridPane>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <Button fx:id="deleteBtn" onAction="#handleDeleteCourse" text="삭제" />
            <Button fx:id="editBtn" onAction="#handleEditCourse" text="수정" />
         </children>
         <padding>
            <Insets bottom="10.0" top="10.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>
